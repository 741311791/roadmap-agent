# ==================== 应用配置 ====================
ENVIRONMENT=development
DEBUG=false
CORS_ORIGINS=["http://localhost:3000"]

# ==================== 数据库配置 ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=roadmap_user
POSTGRES_PASSWORD=roadmap_pass
POSTGRES_DB=roadmap_db

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== S3/R2 配置 ====================
S3_ENDPOINT_URL=https://your-account.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=roadmap-content
S3_REGION=auto

# ==================== LLM 配置 ====================
# -------- 生成 Agents (Generator Agents) --------

# A1: Intent Analyzer (意图分析师)
ANALYZER_PROVIDER=openai
ANALYZER_MODEL=gpt-4o-mini
ANALYZER_BASE_URL=
ANALYZER_API_KEY=your_openai_api_key_here

# A2: Curriculum Architect (课程架构师)
ARCHITECT_PROVIDER=anthropic
ARCHITECT_MODEL=claude-3-5-sonnet-20241022
ARCHITECT_BASE_URL=
ARCHITECT_API_KEY=your_anthropic_api_key_here

# A3: Structure Validator (结构验证器)
VALIDATOR_PROVIDER=openai
VALIDATOR_MODEL=gpt-4o-mini
VALIDATOR_BASE_URL=
VALIDATOR_API_KEY=your_openai_api_key_here

# A4: Tutorial Generator (教程生成器)
GENERATOR_PROVIDER=anthropic
GENERATOR_MODEL=claude-3-5-sonnet-20241022
GENERATOR_BASE_URL=
GENERATOR_API_KEY=your_anthropic_api_key_here

# A5: Resource Recommender (资源推荐师)
RECOMMENDER_PROVIDER=openai
RECOMMENDER_MODEL=gpt-4o-mini
RECOMMENDER_BASE_URL=
RECOMMENDER_API_KEY=your_openai_api_key_here

# A6: Quiz Generator (测验生成器)
QUIZ_PROVIDER=openai
QUIZ_MODEL=gpt-4o-mini
QUIZ_BASE_URL=
QUIZ_API_KEY=your_openai_api_key_here

# Quality Reviewer (质量审核员)
REVIEWER_PROVIDER=openai
REVIEWER_MODEL=gpt-4o
REVIEWER_BASE_URL=
REVIEWER_API_KEY=your_openai_api_key_here

# Roadmap Editor & Tutorial Editor (路线图/教程编辑器)
EDITOR_PROVIDER=anthropic
EDITOR_MODEL=claude-3-5-sonnet-20241022
EDITOR_BASE_URL=
EDITOR_API_KEY=your_anthropic_api_key_here

# -------- 修改 Agents (Modifier Agents) --------
# 用于处理用户对已生成内容的修改请求
# 默认复用对应的 Generator Agent 配置，如需独立配置请取消注释

# Modification Analyzer (修改意图分析师)
# 默认复用 ANALYZER_API_KEY
# MODIFICATION_ANALYZER_PROVIDER=openai
# MODIFICATION_ANALYZER_MODEL=gpt-4o-mini
# MODIFICATION_ANALYZER_BASE_URL=
# MODIFICATION_ANALYZER_API_KEY=your_openai_api_key_here

# Tutorial Modifier (教程修改师)
# 默认使用 OpenAI，复用 RECOMMENDER_API_KEY
# TUTORIAL_MODIFIER_PROVIDER=openai
# TUTORIAL_MODIFIER_MODEL=gpt-4o
# TUTORIAL_MODIFIER_BASE_URL=
# TUTORIAL_MODIFIER_API_KEY=your_openai_api_key_here

# Resource Modifier (资源修改师)
# 默认复用 RECOMMENDER_API_KEY
# RESOURCE_MODIFIER_PROVIDER=openai
# RESOURCE_MODIFIER_MODEL=gpt-4o-mini
# RESOURCE_MODIFIER_BASE_URL=
# RESOURCE_MODIFIER_API_KEY=your_openai_api_key_here

# Quiz Modifier (测验修改师)
# 默认复用 QUIZ_API_KEY
# QUIZ_MODIFIER_PROVIDER=openai
# QUIZ_MODIFIER_MODEL=gpt-4o-mini
# QUIZ_MODIFIER_BASE_URL=
# QUIZ_MODIFIER_API_KEY=your_openai_api_key_here

# ==================== 外部服务配置 ====================
TAVILY_API_KEY=your_tavily_api_key_here

# ==================== 观测性配置 ====================
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# ==================== 业务配置 ====================
MAX_FRAMEWORK_RETRY=3
MAX_TUTORIAL_RETRY=2
HUMAN_REVIEW_TIMEOUT_HOURS=24
PARALLEL_TUTORIAL_LIMIT=10
ENABLE_CHECKPOINTER=true

# ==================== 工作流控制配置 ====================
# 用于测试时跳过某些步骤，加快流程
SKIP_STRUCTURE_VALIDATION=false
SKIP_HUMAN_REVIEW=false
SKIP_TUTORIAL_GENERATION=false
SKIP_RESOURCE_RECOMMENDATION=false
SKIP_QUIZ_GENERATION=false
