# ==================== 应用配置 ====================
ENVIRONMENT=development
DEBUG=false
CORS_ORIGINS=["http://localhost:3000"]

# ==================== 数据库配置 ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=roadmap_user
POSTGRES_PASSWORD=roadmap_pass
POSTGRES_DB=roadmap_db

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== S3/R2 配置 ====================
S3_ENDPOINT_URL=https://your-account.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=roadmap-content
S3_REGION=auto

# ==================== LLM 配置 ====================
# Intent Analyzer
ANALYZER_PROVIDER=openai
ANALYZER_MODEL=gpt-4o-mini
ANALYZER_BASE_URL=
ANALYZER_API_KEY=your_openai_api_key_here

# Curriculum Architect
ARCHITECT_PROVIDER=anthropic
ARCHITECT_MODEL=claude-3-5-sonnet-20241022
ARCHITECT_BASE_URL=
ARCHITECT_API_KEY=your_anthropic_api_key_here

# Structure Validator
VALIDATOR_PROVIDER=openai
VALIDATOR_MODEL=gpt-4o-mini
VALIDATOR_BASE_URL=
VALIDATOR_API_KEY=your_openai_api_key_here

# Tutorial Generator
GENERATOR_PROVIDER=anthropic
GENERATOR_MODEL=claude-3-5-sonnet-20241022
GENERATOR_BASE_URL=
GENERATOR_API_KEY=your_anthropic_api_key_here

# Quality Reviewer
REVIEWER_PROVIDER=openai
REVIEWER_MODEL=gpt-4o
REVIEWER_BASE_URL=
REVIEWER_API_KEY=your_openai_api_key_here

# Roadmap Editor & Tutorial Editor (共享配置)
EDITOR_PROVIDER=anthropic
EDITOR_MODEL=claude-3-5-sonnet-20241022
EDITOR_BASE_URL=
EDITOR_API_KEY=your_anthropic_api_key_here

# ==================== 外部服务配置 ====================
TAVILY_API_KEY=your_tavily_api_key_here

# ==================== 观测性配置 ====================
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# ==================== 业务配置 ====================
MAX_FRAMEWORK_RETRY=3
MAX_TUTORIAL_RETRY=2
HUMAN_REVIEW_TIMEOUT_HOURS=24
PARALLEL_TUTORIAL_LIMIT=10
ENABLE_CHECKPOINTER=true
